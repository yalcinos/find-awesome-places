<%include ../partials/header%>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">VotePlaces</p>
            <div class="list-group">
                <li class="list-group-item active">Item 1</li>
                <li class="list-group-item">Item 1</li>
                <li class="list-group-item">Item 1</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%=campingsite.img%>">
                <div class="caption-full">
                    <h4 class="pull-right">10 TL</h4>
                    <h4><a href=""><%=campingsite.title%></a></h4>
                    <p><%=campingsite.description%></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right ">
                    <a class="btn btn-info" href="/campgrounds/<%=campingsite._id%>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% campingsite.comments.forEach(function (comment){%>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%=comment.author.username%></strong>
                            <span class="pull-right">5 days ago</span>
                            <p><%=comment.text%></p>
                        </div>
                    </div>
                <%})%>
            </div>
        </div>
    </div>
</div>
<%include ../partials/footer%>
