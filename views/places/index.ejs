<% include ../partials/header%>

<div class="container">
    <header class="jumbotron">
        <div class="container">
             <h2>Rank The Best Historical Places in Turkey! </h2>
            <p>View our hand-picked places from all over the Turkey</p>
            <p >
               <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Place!</a>
            </p>
        </div>
    </header>
    <!--this style is fixed height of images.-->
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <%campingsite.forEach(function(camp){%>
                <div class="col-lg-3 col-md-6 col-sm-12">
                    <div class="thumbnail">
                         <img src="<%= camp.img%>"></img>
                         <div class="caption">
                             <h4> <%= camp.title %> </h4>
                        </div>
                        <p>
                            <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            <% }); %>
    </div>
</div>

<% include ../partials/footer%>